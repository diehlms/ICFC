<% if @cabin %>
    <%= @cabin.name %>
    <%= @cabin.bedrooms %>
    <%= image_tag(@cabin.image.url(:thumb), alt: 'Image', :class => "pull-right cabin-image") if @cabin.image? %>
<% end %>
<div id="articles">
    <h2 id="month">
      <%= link_to "<", date: @date.prev_month %>
      <%= @date.strftime("%B %Y") %>
      <%= link_to ">", date: @date.next_month %>
    </h2>
    <%= calendar @date do |date| %>
      <%= date.day %>
    <% end %>
</div>