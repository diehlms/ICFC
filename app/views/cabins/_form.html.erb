<%= form_for @cabin do |f| %>
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :bedrooms %>
        <%= f.text_field :bedrooms, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :washerdryer, "Washer/Dryer?" %>
        <%= f.check_box :washerdryer, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :dock, "Dock?" %>
        <%= f.check_box :dock, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.file_field :images, multiple: true, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.submit class: "btn btn-primary mb-2" %>
    </div>
<% end %>