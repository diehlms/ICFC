<div class="container">
    <div class="article-card">
        <div class="article card-body">
            <div class="col md-6">
                <h4 class="card-title"><%= @article.title %></h4>
                <% if @article.user %>
                    <small><p class="card-subtitle mb-2 text-muted">Created by: <%= @article.user.username if @article.user_id %></p></small>
                <% end %>
                <%= simple_format(@article.content) %>
            </div>
            <div class="col md-6">
                <%= image_tag(@article.image.url(:thumb), alt: 'Image', :class => "pull-right article-image") if @article.image? %>
            </div>
        </div>
    </div>
    <div class="UIactions">
        <% if logged_in? && @article.user_id == current_user.id %>                   
            <span class="a"><%= button_to "Delete", article_path(@article), method: :delete, class: "btn btn-danger" %></span>
            <span class="a"><%= link_to "Edit", edit_article_path(@article), class: "btn btn-primary"%></span>
        <% end %>
    </div>
    <br>
    <% if logged_in? %>
        <h3>Leave a Reply:</h3>
        <%= render partial: "comments/form", article_id: @article_id %>
    <% else %>
        <span class="a"><p class="btn btn-success">please <%= link_to 'log in', login_path %> to post comments</p></span>
    <% end %>
    <% if @comments.any? %>
        <%= will_paginate @comments %>
        <div class="comment card">
            <div class="comment card-body">
                <% @comments.each do |c| %>
                    <span><em><small>Posted by: <strong><%= c.user.username %></strong> <%= time_ago_in_words(c.created_at) %> ago</small></em></span>
                    <p><%= c.content %> </p>
                    <% if logged_in? && c.user_id == current_user.id %>
                        <span class="UIbutton"><%= button_to comment_path(c), method: :delete, class: "btn btn-xs btn-danger pull-right" do %>
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        <% end %></span>
                    <% end %>
                <% end %>
            </div>
        </div>
    <% end %>
</div>