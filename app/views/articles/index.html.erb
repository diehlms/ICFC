<h1>All articles</h1>
<% if logged_in? %>
    <%= link_to "write an article", new_article_path %>
<% else %>
    <p> Please <%= link_to "log in", log_in_path %> to post articles and comment</p>
<% end %>
<% if notice %>
    <p class="alert alert-notice"><%= notice %></p>
<% end %>
<br><br>
<% if @articles.any? %>
    <% @articles.each do |article| %>
        <div class="card article">               
            <div class="card-body">
                <div clas="row">
                <%= link_to article.title, article_path(article), :class => "card-title" %>
                <small><p class="card-subtitle mb-2 text-muted">Created by: <%= article.user.username if article.user %></p></small>
                <p class="card-text"><%= truncate(article.content, length: 200) %></p>
                <%= image_tag(article.image.url, alt: 'Image', :class => "card-img-right") if article.image? %>
                <br><br>
                <% if logged_in? && article.user_id == current_user.id %>                   
                    <%= button_to "Delete", article_path(article), method: :delete, data: { confirm: "Are you sure you want to delete the article?" }, :class => "btn btn-danger" %>
                <% end %>
            </div>
        </div>
    <% end %>
<% end %>