<h1>All articles</h1>
<% if @articles.any? %>
    <% @articles.each do |article| %>
        <div>
            <p>Created by: <%= article.user.username if article.user %></p>                <%= link_to article.title, article_path(article) %>
            <%= truncate(article.description, length: 200) %>
            <% if logged_in? && article.user_id == current_user.id %>                    <%= link_to "Edit", edit_article_path(article) %>
                <%= button_to "Delete", article_path(article), method: :destroy, data: { confirm: "Are you sure you want to delete the article?" } %>
            <% end %>
        </div>
    <% end %>
<% end %>
