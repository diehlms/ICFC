<div class="container">
    <h1 align="center" class="section-title">Directory</h1>
    <% if logged_in? %>
        <table class="users-table table">
            <thead>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Email Address</th>
                <th>Phone Number</th>
            </thead>
            <tbody>
                <% @users.each do |user| %>
                    <tr>
                        <td><%= user.lastname %></td>
                        <td><%= user.firstname %></td>
                        <td class="userinfo"><%= user.email %></td>
                        <td class="userinfo"><%= user.phone_number %></td>
                        <% if logged_in? %>
                            <% if user.id == current_user.id %>
                                <td><%= link_to "edit profile", edit_user_path(user), class: "btn btn-info btn-sm" %></td>
                            <% end %>
                        <% end %>
                    </tr>
                <% end %>
            </tbody>
        </table>
    <% else %>
        <div class="user-not-allowed">
            <p>You must be <%= link_to "logged in", login_path %> to view the directory.</p>
        </div>
    <% end %>
</div>