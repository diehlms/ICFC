<div class="container">
    <h1 align="center" class="section-title">Directory</h1>
    <table class="table">
        <thead>
            <th>Name</th>
            <th>Email Address</th>
            <th>Phone Number</th>
            <th></th>
        </thead>
        <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td><%= link_to "#{user.username}", user_path(user) %></td>
                    <td><%= user.email %></td>
                    <td><%= user.phone_number %></td>
                    <% if logged_in? %>
                        <% if user.id == current_user.id %>
                            <td><%= link_to "edit profile", edit_user_path(user), class: "btn btn-info btn-sm" %></td>
                        <% end %>
                    <% end %>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>