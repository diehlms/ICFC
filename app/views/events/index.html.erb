<div class="container">
  <h1 class="section-title" align="center">Events</h1>
    <div id="articles">
      <h2 id="month">
        <%= link_to "<", date: @date.prev_month %>
        <%= @date.strftime("%B %Y") %>
        <%= link_to ">", date: @date.next_month %>
      </h2>
      <%= calendar @date do |date| %>
        <%= date.day %>
        <% if @events_by_date[date] %>
          <ul>
            <% @events_by_date[date].each do |event| %>
              <li><%= link_to "#{event.events}", event %></li>
            <% end %>
          </ul>
        <% end %>
      <% end %>
    </div>

  <table class="table">
    <thead>
      <tr>
        <th>Event</th>
        <th>Location</th>
        <th>Start time</th>
        <th>End time</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <br>
    <%= link_to 'Add an Event', new_event_path, class: "btn btn-block btn-success" %>
    <br>
    <tbody>
      <div class="events-display">
        <% @events.each do |event| %>
          <tr>
            <td><%= event.events %></td>
            <td><%= event.location %></td>
            <td><%= event.start_time %></td>
            <td><%= event.end_time %></td>
            <td><%= link_to 'Show', event, class: "btn btn-sm btn-primary" %></td>
            <td><%= link_to 'Edit', edit_event_path(event), class: "btn btn-sm btn-info" %></td>
            <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></td>
          </tr>
        <% end %>
      </div>
    </tbody>
  </table>
</div>