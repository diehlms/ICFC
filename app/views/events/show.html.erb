<div class="container">
  <div class="event-card">
    <div class="event card-header">
      <h3 class="section-title"><%= @event.events %></h3>
    <div class="event card-body">
      <strong>Location:</strong>
      <%= @event.location %>
      <br>
      <strong>Description:</strong>
      <%= @event.description %>
      <div class="card-times">
        <strong><p>
        <%= @event.start_time  %>
        <% if @event.end_time %> 
          to: 
          <%= @event.end_time  %>
        <% end %>
        </p></strong>
      </div>
    </div>
    <% if logged_in? && current_user.admin? %>
      <%= link_to 'Edit', edit_event_path(@event), class: "btn btn-primary" %>
      <%= button_to 'Delete', event_path(@event), method: :delete, data: {confirm: 'are you sure?'}, class: "btn btn-danger" %>
    <% elsif logged_in? && current_user.id == @event.user_id %>
      <%= link_to 'Edit', edit_event_path(@event), class: "btn btn-primary" %>
      <%= button_to 'Delete', event_path(@event), method: :delete, data: {confirm: 'are you sure?'}, class: "btn btn-danger" %>
    <% end %>
  </div>
</div>
