<div class="container">
    <%= render partial: "form" %>
    <% if @families %>
        <% @families.each do |family| %>
            <div class="card">
                <div class="card-title">
                    <%= link_to family.familyname, family_path(family) %>
                </div>
            </div>
        <% end %>
    <% end %>
</div>